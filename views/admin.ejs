<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>管理員後台</title>

      <link rel="stylesheet" href="../public/css/styles.css">
</head>
<body>
<div class="auth">
    <h2>🔧 管理員後台 - 員工打卡記錄</h2>

    <% for (const date in groupedRecords) { %>
        <div class="date-section">
            <h3>📅 <%= date %></h3>
            <table>
                <tr>
                    <th>員工名稱</th>
                    <th>上班時間</th>
                    <th>下班時間</th>
                    <th>加班開始</th>
                    <th>加班結束</th>
                    <th>總工時</th>
                </tr>
                <% groupedRecords[date].forEach(employee => { %>
                <tr>
                    <td><%= employee.username %></td>
                    <td><%= employee.clock_in %></td>
                    <td><%= employee.clock_out %></td>
                    <td><%= employee.overtime_start %></td>
                    <td><%= employee.overtime_end %></td>
                    <td><%= employee.total_work_hours %> 小時</td>
                </tr>
                <% }); %>
            </table>
        </div>
    <% } %>

    <!-- 📌 當月統計報告 -->
    <div class="summary">
        <h3>📊 本月工時統計</h3>
        <table>
            <tr>
                <th>員工名稱</th>
                <th>當月總工作時數</th>
                <th>當月總加班時數</th>
            </tr>
            <% for (const username in monthlyStats) { %>
            <tr>
                <td><%= username %></td>
                <td><%= monthlyStats[username].total_work %> 小時</td>
                <td><%= monthlyStats[username].total_overtime %> 小時</td>
            </tr>
            <% } %>
        </table>
    </div>

    <a href="/employees"><button>回員工頁面</button></a>
</div>
</body>
</html>
